{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WHT": "Server=LAPTOP-T663RI27;Database=taxPayerApplication(.net6);integrated security=true"
  },
  "JWT": {
    "Key": "secret Key ,some big key",
    "Issuer": "https://localhost:7180",
    "Audience": "User"
  },

  "Log4NetConfig": {
    "Root": {
      "Level": "DEBUG",
      "Appenders": [
        {
          "AppenderType": "log4net.Appender.ConsoleAppender",
          "Layout": {
            "LayoutType": "log4net.Layout.PatternLayout",
            "ConversionPattern": "%date [%thread] %level %logger - %message%newline"
          }
        }
      ]
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  }
}
